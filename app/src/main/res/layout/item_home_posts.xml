<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_400"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75">

            <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/post_start_gradient"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4D"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/dp_16"/>


                <TextView
                    android:id="@+id/post_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/ic_favorite_white_24dp"
                    android:drawablePadding="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_32"/>


            </RelativeLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25">

            <View
                android:id="@+id/question_container_background"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/post_mid_gradient" />

            <RelativeLayout
                android:id="@+id/question_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_24"
                android:visibility="gone">

                <TextView
                    android:id="@+id/question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q:"
                    android:textSize="@dimen/sp_32"
                    android:textStyle="bold"
                    android:textColor="@color/green"/>

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi all of u"
                    android:textSize="@dimen/sp_32"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_below="@+id/question_title"/>


            </RelativeLayout>


        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/post_end_gradient" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left">

            <TextView
                android:id="@+id/athlete_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_16"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/athlete_thumb"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@drawable/circle"
                android:src="@drawable/ic_account"
                android:layout_below="@+id/athlete_name"
                android:layout_marginTop="8dp"/>

            </RelativeLayout>


        </FrameLayout>

    </LinearLayout>

</FrameLayout>